{% extends "base.html.twig" %}
    
{% block title 'Tous nos biens' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
                {# Aligne les formulaires (lors des apparitions desmessages d'erreur) #}
                <div class="align-items-end form-row">
                    <div class="col">
                        {{ form_row(form.minSurface) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.maxPrice) }}
                    </div>
                    <div class="col">
                        {# Aligne le boutton avec les champs du formulaire #}
                        <div class="form-group">
                            <button class="btn btn-primary">Rechercher</button>
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="mt-4 container">
        <h1>Voir tous nos biens</h1>
        <div class="row">
            {% for property in properties %}
                <div class="col-md-4">
                    {{ include('property/_property.html.twig') }}
                </div>
            {% endfor %}
        </div>

        <div class="pagination">
            {{ knp_pagination_render(properties) }}
        </div>
    </div>
{% endblock %}